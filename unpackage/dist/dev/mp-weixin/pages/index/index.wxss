
.container {
		padding-bottom: 30rpx;
}
	
	/* 轮播图样式 */
.banner {
		width: 100%;
		height: 350rpx;
}
.banner-item {
		position: relative;
		width: 100%;
		height: 100%;
}
.banner-image {
		width: 100%;
		height: 100%;
}
.banner-title {
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		padding: 15rpx;
		background-color: rgba(0, 0, 0, 0.5);
		color: #FFFFFF;
		font-size: 28rpx;
}
	
	/* 专题列表样式 */
.topic-grid {
		display: flex;
		flex-wrap: wrap;
		padding: 20rpx;
}
.topic-item {
		width: 48%;
		margin: 1%;
		background-color: #FFFFFF;
		border-radius: 10rpx;
		overflow: hidden;
		box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
		margin-bottom: 20rpx;
}
.topic-image {
		width: 100%;
		height: 200rpx;
}
.topic-title {
		padding: 15rpx;
		font-size: 28rpx;
		text-align: center;
		color: #333333;
}
